<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.samsung.itschool.book.overcalc4.Main2Activity">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        android:layout_marginBottom="-9dp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="23dp"
        android:layout_height="27dp"
        android:text="="
        android:textSize="25sp"

        app:layout_constraintLeft_toRightOf="@+id/BB"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/BB"
        android:layout_marginBottom="15dp" />
    <EditText
        android:id="@+id/BB"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="b"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="0dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:text="X+ "
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/K"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/K"
        android:layout_marginBottom="0dp" />
    <EditText
        android:id="@+id/K"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="K"
        android:layout_gravity="bottom"
        android:ems="2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.292" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="183dp"
        android:layout_height="32dp"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="X="
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lnrbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Линейное уравнение"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Перейти к квадратному уравнению"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnrbtn"
        app:layout_constraintVertical_bias="0.905"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/lnrbtn"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:text="Решить линейное уравнение"
        android:onClick="OnClick"


        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="176dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/answer"
        android:layout_marginTop="8dp" />
    <Button

        android:layout_width="293dp"
        android:layout_height="63dp"
        android:text="Поделиться линейным уравнением"
        android:id="@+id/shareLine"
        android:onClick="onShareLine"


        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.506" />

</android.support.constraint.ConstraintLayout>
