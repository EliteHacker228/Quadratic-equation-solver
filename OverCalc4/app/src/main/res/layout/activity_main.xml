<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.samsung.itschool.book.overcalc4.MainActivity">

        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X +"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/coeffB"
        app:layout_constraintLeft_toRightOf="@+id/coeffB"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="-3dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X^2 +"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/coeffA"
        app:layout_constraintLeft_toRightOf="@+id/coeffA"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="=0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/coeffC"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/coeffC"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.475" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="327dp"
        android:layout_height="64dp"
        android:text="Решить квадратное уравнение"
        android:onClick="ClickButton"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginTop="210dp" />
    <EditText
        android:id="@+id/coeffC"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="c"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="-1dp" />
    <TextView
        android:id="@+id/rootOne"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:text="X1= "
        android:textSize="18sp"
        android:layout_marginEnd="120dp"
        app:layout_constraintRight_toLeftOf="@+id/rootTwo"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/rootTwo"
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:text="X2= "
        android:textSize="18sp"
        android:layout_marginRight="-2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate"
        android:layout_marginEnd="7dp" />
    <EditText
        android:id="@+id/coeffB"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="b"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/coeffA"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="a"
        android:textSize="18sp"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    />

    <Button
        android:id="@+id/quadLinear"
        android:onClick="onSharequad"
        android:layout_width="292dp"
        android:layout_height="65dp"
        android:text="Поделиться результатами"
        app:layout_goneMarginTop="18dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />


    <Button
        android:id="@+id/button1"
        android:layout_width="282dp"
        android:layout_height="67dp"
        android:text="Перейти к линейному уравнению"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/quadLinear" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Квадратные уравнения"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
